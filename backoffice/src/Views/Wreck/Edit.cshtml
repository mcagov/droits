@model WreckForm
@{
    ViewData["Title"] = Model.Id == default ? "New Wreck" : $"Wreck: {Model.Name}";
}

@{
    await Html.RenderPartialAsync("_MessageBanner");
}

<h4>@ViewData["Title"]</h4>

<form class="form-horizontal mt-4" asp-action="Save" method="POST">

    <div class="col mt-4">
        <div class="card">
            <h5 class="card-header">Wreck</h5>
            <div class="card-body">
                @Html.HiddenFor(m => m.Id)
                @{
                    await Html.RenderPartialAsync("Wreck/_WreckFormFields", Model);
                }

                <div class="mt-4 float-end">
                    <a type="button" class="btn btn-secondary" asp-action="Index">Cancel</a>
                    <button class="btn btn-primary" type="submit">Save</button>
                </div>
            </div>
        </div>
    </div>

</form>