@using System.Net
@model string

@{
    dynamic data = Newtonsoft.Json.JsonConvert.DeserializeObject(@Model) ?? throw new InvalidOperationException();

    string GetValueOrDefault(string value) => string.IsNullOrEmpty(value) ? "---" : WebUtility.HtmlDecode(value);
}
<div class="mb-2">
    <p class="font-weight-bold">Information submitted by the Salvor:</p>
</div>

<div class="mt-2 p-2 border border-grey">
    
    <h5>Vessel</h5>
    
    <div class="form-group row m-1">
        <div class="col-md-5">
            <label class="font-weight-bold">Name</label>
        </div>
        <div class="col-md-7">
            @GetValueOrDefault(data.VesselName)
        </div>
    </div>

    <div class="form-group row m-1">
        <div class="col-md-5">
            <label class="font-weight-bold">Construction Year</label>
        </div>
        <div class="col-md-7">
            @GetValueOrDefault(data.VesselConstructionYear)
        </div>
    </div>

    <div class="form-group row m-1">
        <div class="col-md-5">
            <label class="font-weight-bold">Sunk Year</label>
        </div>
        <div class="col-md-7">
            @GetValueOrDefault(data.VesselSunkYear)
        </div>
    </div>

    <div class="form-group row m-1">
        <div class="col-md-5">
            <label class="font-weight-bold">Description</label>
        </div>
        <div class="col-md-7">
            @GetValueOrDefault(data.WreckDescription)
        </div>
    </div>
    
    <h5>Location</h5>
    
        <div class="form-group row m-1">
            <div class="col-md-5">
                <label class="font-weight-bold">Latitude</label>
            </div>
            <div class="col-md-7">
                @GetValueOrDefault(data.Latitude)
            </div>
        </div>
    
    <div class="form-group row m-1">
        <div class="col-md-5">
            <label class="font-weight-bold">Longitude</label>
        </div>
        <div class="col-md-7">
            @GetValueOrDefault(data.Longitude)
        </div>
    </div>
    
    <div class="form-group row m-1">
        <div class="col-md-5">
            <label class="font-weight-bold">Radius</label>
        </div>
        <div class="col-md-7">
            @GetValueOrDefault(data.LocationRadius)
        </div>
    </div>
    
    <div class="form-group row m-1">
        <div class="col-md-5">
            <label class="font-weight-bold">Depth</label>
        </div>
        <div class="col-md-7">
            @GetValueOrDefault(data.VesselDepth)
        </div>
    </div>
    
    <div class="form-group row m-1">
        <div class="col-md-5">
            <label class="font-weight-bold">Removed From</label>
        </div>
        <div class="col-md-7">
            @GetValueOrDefault(data.RemovedFrom)
        </div>
    </div>
    
</div>
