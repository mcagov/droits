<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Droits</title>
    <link rel="stylesheet" href="~/dist/bundle.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img class="mca-logo" src="~/images/mca-logo-dark.png" alt="MCA Logo"/>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Droit" asp-action="Index">Droits</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Wreck" asp-action="Index">Wrecks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Letter" asp-action="Index">Letters</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Salvor" asp-action="Index">Salvors</a>
                    </li>
                </ul>


                @if (@User.Identity?.IsAuthenticated??false)
                {
                    <partial name="_searchBar"/>
                }
                <partial name="_userDropdown"/>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3 mb-4">
        @RenderBody()
    </main>
</div>


<script src="~/dist/bundle.js" asp-append-version="true"></script>
@await Html.PartialAsync("_ConfirmDialog")
@await RenderSectionAsync("Scripts", false)
</body>
</html>