@model List<DroitView>
@{
    ViewData["Title"] = "Droit Reports";
}

@{
    await Html.RenderPartialAsync("_MessageBanner");
}

<div class="row">
    <div class="col">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="col">
        <a class="btn btn-primary float-end" asp-action="Add">Add Droit</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Reference</th>
            <th scope="col">Status</th>
            <th scope="col">Salvor</th>
            <th scope="col">Wreck</th>
            <th scope="col">Created</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var droit in Model)
        {
            <tr>
                <td class="p-3 text-uppercase">
                    <a asp-action="View" asp-route-id="@droit.Id">@droit.Reference</a>
                </td>
                <td class="p-3">@Html.DisplayFor(m => droit.Status)</td>
                <td class="p-3">@Html.ActionLink(droit.Salvor.Name, "View", "Salvor", new { id = droit.Salvor.Id })</td>
                <td class="p-3">@Html.ActionLink(droit.Wreck.Name, "View", "Wreck", new { id = droit.Wreck.Id })</td>
                <td class="p-3">@droit.Created.ToString("dd/MM/yyyy")</td>
                <td class="p-3">
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@droit.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="View" asp-route-id="@droit.Id" class="btn btn-primary">View</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<div class="row">
    <div class="col">
        <a class="btn btn-primary float-end" asp-action="Add">Add Droit</a>
    </div>
</div>