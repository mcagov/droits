@model UserForm
@{
    ViewData["Title"] = Model.Id == default ? "New User" : $"User: {Model.Name}";
}

@{
    await Html.RenderPartialAsync("_MessageBanner");
}

<h4>@ViewData["Title"]</h4>
<form class="form-horizontal mt-4" asp-action="Save" method="POST">
    @Html.HiddenFor(m => m.Id)
    <div class="col mt-4">
        <div class="card">
            <h5 class="card-header">RoW User</h5>
            <div class="card-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-form-label" })
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-form-label" })
                    @if (Model.Id == default)
                    {
                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                    }
                    else
                    {
                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" , @disabled=true} })
                        @Html.HiddenFor(m => m.Email)
                    }
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                
                <div class="form-group">
                    @Html.LabelFor(m => m.AuthId, new { @class = "col-form-label" })
                    @if (Model.Id == default)
                    {
                        @Html.EditorFor(m => m.AuthId, new { htmlAttributes = new { @class = "form-control" } })
                    }
                    else
                    {
                        @Html.EditorFor(m => m.AuthId, new { htmlAttributes = new { @class = "form-control", @disabled=true} })
                        @Html.HiddenFor(m => m.AuthId)
                    }
                    @Html.ValidationMessageFor(m => m.AuthId, "", new { @class = "text-danger" })    
                    
                </div>

                <div class="mt-4 float-end">
                    <a type="button" class="btn btn-secondary" asp-action="Index">Cancel</a>
                    <button class="btn btn-primary" type="submit">Save</button>
                </div>
            </div>
        </div>
    </div>

</form>