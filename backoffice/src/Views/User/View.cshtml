@model UserView

@{
    ViewData["Title"] = Model.Name == "" ? "User View" : Model.Name;
}

<div class="card">
    <div class="card-header">
        <h2 class="card-title">@ViewData["Title"]</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group row m-1">
                    <div class="col-md-2">
                        <label class="font-weight-bold">@Html.DisplayNameFor(m => m.Name)</label>
                    </div>
                    <div class="col-md-10">
                        @Html.DisplayFor(m => m.Name)
                    </div>
                </div>
                
                <div class="form-group row m-1">
                    <div class="col-md-2">
                        <label class="font-weight-bold">@Html.DisplayNameFor(m => m.Email)</label>
                    </div>
                    <div class="col-md-10">
                        @Html.DisplayFor(m => m.Email)
                    </div>
                </div>
                
                <div class="form-group row m-1">
                    <div class="col-md-2">
                        <label class="font-weight-bold">@Html.DisplayNameFor(m => m.AuthId)</label>
                    </div>
                    <div class="col-md-10">
                        @Html.DisplayFor(m => m.AuthId)
                    </div>
                </div>
                
                <div class="form-group row m-1">
                    <div class="col-md-2">
                        <label class="font-weight-bold">@Html.DisplayNameFor(m => m.Created)</label>
                    </div>
                    <div class="col-md-10">
                        @Html.DisplayFor(m => m.Created)
                    </div>
                </div>
                
                <div class="form-group row m-1">
                    <div class="col-md-2">
                        <label class="font-weight-bold">@Html.DisplayNameFor(m => m.LastModified)</label>
                    </div>
                    <div class="col-md-10">
                        @Html.DisplayFor(m => m.LastModified)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col d-flex flex-row mt-4 justify-content-end">
    <div class="align-self-end">
        <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a type="button" class="btn btn-primary" asp-action="Index">View Users</a>
    </div>
</div>